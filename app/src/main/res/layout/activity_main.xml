<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activityMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgGraphCollected"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/lblTextIao"
            android:padding="2dp" />

        <TextView
            android:id="@+id/lblCaption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/strCaption"
            android:layout_toStartOf="@+id/imgGraphCollected"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/lblTextTermo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblCaption"
            android:layout_centerHorizontal="true"
            android:text="@string/strText"
            android:layout_alignEnd="@+id/lblCaption"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/lblTermo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblCaption"
            android:layout_centerHorizontal="true"
            android:text="@string/strTextTemoCaption"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_toStartOf="@id/lblTextTermo" />

        <TextView
            android:id="@+id/lblTextIao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblTextTermo"
            android:layout_centerHorizontal="true"
            android:text="@string/strText"
            android:layout_alignEnd="@+id/lblCaption"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/lblIao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblTextTermo"
            android:layout_centerHorizontal="true"
            android:text="@string/strTextIaoCaption"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_toStartOf="@id/lblTextIao" />

        <ImageView
            android:id="@+id/imgGraph"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:contentDescription="@string/strGraphDescription"
            android:scaleType="fitStart"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/imgGraphCollected" />

    </RelativeLayout>
</android.support.v4.widget.SwipeRefreshLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width= "match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/notification_light">

    <ImageView
        android:id="@+id/imgvNot"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:paddingStart="2dp"
        tools:ignore="RtlSymmetry"
        android:paddingTop="2dp"
        android:contentDescription="@string/strGraphDescription"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/lblNotTermo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strTextTemoCaption"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearance"
        tools:ignore="RtlSymmetry"
        android:layout_toEndOf="@+id/imgvNot"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/lblNotTextTermo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strWidgetText"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        android:paddingStart="5dp"
        tools:ignore="RtlSymmetry"
        android:layout_toEndOf="@+id/lblNotTermo"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/lblNotIao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strTextIaoCaption"
        android:textAppearance="?android:attr/textAppearance"
        android:textColor="@android:color/white"
        android:paddingStart="10dp"
        tools:ignore="RtlSymmetry"
        android:layout_toEndOf="@+id/lblNotTextTermo"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/lblNotTextIao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strWidgetTor"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        android:paddingStart="5dp"
        tools:ignore="RtlSymmetry"
        android:layout_toEndOf="@+id/lblNotIao"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/lblNotTime"
        android:text="@string/strNotTime"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="top|end"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:ignore="SmallSp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"/>

</RelativeLayout>
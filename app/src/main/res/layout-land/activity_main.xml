<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/activityMain"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="match_parent">
		<RelativeLayout
			android:id="@+id/layLeft"
			android:layout_width="wrap_content"
			android:layout_height="match_parent">

			<ImageView
				android:id="@+id/imgGraphCollected"
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:layout_below="@+id/lblTextIao"
				android:layout_alignParentStart="true" />

			<TextView
				android:id="@+id/lblCaption"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"
				android:text="@string/strCaption"
				android:layout_alignParentStart="true" />

			<TextView
				android:id="@+id/lblTextTermo"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/strText"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:layout_below="@+id/lblTermo"
				android:layout_alignEnd="@+id/lblTermo"/>

			<TextView
				android:id="@+id/lblTermo"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/strTextTemoCaption"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:layout_below="@+id/lblCaption"
				android:layout_alignEnd="@+id/lblCaption"/>

			<TextView
				android:id="@+id/lblTextIao"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/strText"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:layout_below="@+id/lblIao"
				android:layout_alignEnd="@+id/lblIao"/>

			<TextView
				android:id="@+id/lblIao"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/strTextIaoCaption"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:layout_below="@+id/lblTextTermo"
				android:layout_alignEnd="@+id/lblTextTermo"/>

		</RelativeLayout>

		<RelativeLayout
			android:id="@+id/layRight"
			android:layout_height="match_parent"
            android:layout_width="wrap_content">

			<ImageView
				android:id="@+id/imgGraph"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_alignParentEnd="true"
				android:contentDescription="@string/strGraphDescription"
				android:scaleType="fitStart"
				android:layout_alignParentStart="true" />
		</RelativeLayout>
	</LinearLayout>
</android.support.v4.widget.SwipeRefreshLayout>
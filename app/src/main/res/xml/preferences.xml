        android:key="pref_is_notification1"
        android:title="@string/pref_isNotificationTitle"
        android:dialogTitle="@string/pref_isNotificationTitleDialog"
        android:defaultValue="@string/pref_isNotificationValuesDefault" />
    <ListPreference
        android:key="pref_digits_notification"
        android:title="@string/pref_digitsInNotificationTitle"

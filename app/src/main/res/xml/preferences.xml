        android:entryValues="@array/pref_digitsInNotificationValues"
        android:defaultValue="@string/pref_digitsInNotificationValuesDefault" />
    <ListPreference
        android:key="pref_notification_graph"
        android:title="@string/pref_notificationGraphTitleDialog"

        android:entries="@array/pref_notificationGraphEntries"
        android:entryValues="@array/pref_notificationGraphValues"
        android:defaultValue="@string/pref_notificationGraphValuesDefault" />
    <CheckBoxPreference
        android:key="pref_notification_show_termo1"
        android:title="@string/pref_notificationShowTermoTitleDialog"
        android:dialogTitle="@string/pref_notificationShowTermoTitleDialog"
        android:defaultValue="@string/pref_notificationShowTermoValuesDefault" />
    <CheckBoxPreference
        android:key="pref_notification_show_iao1"
        android:title="@string/pref_notificationShowIaoTitleDialog"
        android:dialogTitle="@string/pref_notificationShowIaoTitleDialog"
        android:defaultValue="@string/pref_notificationShowIaoValuesDefault" />
</PreferenceScreen>